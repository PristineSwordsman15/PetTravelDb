@model IEnumerable<PetTravelDb.Models.Flights>
<div style="background-color: mediumturquoise; backface-visibility: 0%">
@{
    ViewData["Title"] = "Flights";
}

<h1>Flights</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <form asp-action="FlightSearch"asp-controller="Flights">
      

        
        
            Search by BookingRefNo: &nbsp; 
            <input type="text" name="Flight" />
            <input type="submit" value="Filter" />
        
        
    </form>

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingRefNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingRefNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>