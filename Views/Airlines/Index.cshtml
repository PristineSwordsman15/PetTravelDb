@model IEnumerable<PetTravelDb.Models.Airlines>
<div style="background-color: mediumturquoise; backface-visibility: 0%">

@{
    ViewData["Title"] = "Airlines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Airlines</h1>


    <th>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.AirlinesName)</a>
    </th>

<p>
    <a asp-action="Create">Create New</a>


    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by AirlineName: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>
</p>




<table>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.AirlinesName)</a>

                            
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirlinesDescription)
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AirlinesName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AirlinesDescription)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AirlinesId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AirlinesId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AirlinesId">Delete</a>
                    </td>
                </tr>
            }                                                                                                                       
    </tbody>
</table>
